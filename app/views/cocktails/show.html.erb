<div class="container">
<img src="<%= @cocktail.image %>" width=300>
<h1><%= @cocktail.name %></h1>
<p><%= @cocktail.description %></p>
<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %></p>
<p><%= dose.ingredient.name %>
<%= link_to raw("<i class='far fa-trash-alt'></i>"), dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %></p>
<% end %>

<p><%= link_to "Add Ingredients and dose", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Back to cocktails", cocktails_path %></p>
</div>
